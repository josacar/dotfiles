[user]
  email = {{ if hasKey . "email" }}{{ .email | quote }}{{ else }}"josacar@users.noreply.github.com"{{ end }}
  name = Jose Luis Salas
  signingkey = {{ if hasKey . "signingkey" }}{{ .signingkey | quote }}{{ else }}"3B5BB81B203269D79D8492D9BE7CDF9012256B23"{{ end }}
[github]
  user = josacar
[core]
  pager = less -FRSX
  whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
  editor = vim -f
  autocrlf = input
  safecrlf = true
[advice]
  statusHints = false
[color]
  branch = auto
  diff = auto
  status = auto
  ui = true
  pager = true
[color "branch"]
  current = yellow reverse
  local   = yellow
  remote  = green
[color "diff"]
  meta = blue
  frag = magenta
  old  = red
  new  = green
[color "status"]
  added = yellow
  changed = green
  untracked = blue
[push]
  default = current
[alias]
  add-unmerged = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; git add `f`"
  amend = commit --amend
  edit-unmerged = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; $EDITOR `f`"
  log1 = log --abbrev-commit --pretty=oneline
  logf = log --pretty=fuller
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
  new = log ..@{upstream}
  noff = merge --no-ff
  pend = log @{upstream}..
  pullify = config --add remote.origin.fetch '+refs/pull/*/head:refs/remotes/origin/pr/*'
  pr  = "!f() { git fetch origin refs/pull/$1/head:pr/$1; } ; f"
  review = !"git log master..origin/master"
  show-patch = format-patch --stdout -1
[branch]
  autosetuprebase = always
[diff]
  tool = vimdiff
  wsErrorHighlight = all
[difftool "diffmerge"]
  cmd = diffmerge \"$LOCAL\" \"$REMOTE\"
[merge]
  tool = vimdiff
[mergetool "diffmerge"]
  cmd = "diffmerge --merge --result=\"$MERGED\" \"$LOCAL\" \"$(if test -f \"$BASE\"; then echo \"$BASE\"; else echo \"$LOCAL\"; fi)\" \"$REMOTE\""
  trustExitCode = true
[commit]
  gpgsign = true
[pull]
  rebase = true
[rebase]
  autoStash = true
